generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

type PlanInfo {
  client_secret String
  subscriptionPlanId String
}

model user {
  id String   @id @default(auto()) @map("_id") @db.ObjectId
  clerkId String @unique
  email String @unique

  planInfo PlanInfo?
}

model blogs {
  id String   @id @default(auto()) @map("_id") @db.ObjectId
  asAUncompletedDraft Boolean
  isPublished Boolean 
  coverImage String?
  content String?
  title String?
  userId String
}

model subject {
  id String   @id @default(auto()) @map("_id") @db.ObjectId
  name String
  semester Int
  imageUrl String
  university String
  universityShort String?

  resources Resource[]
}

enum ResourceType {
  Folder
  PDF
}

type Resource {
  resources Resource[]
  webViewLink String?
  isPremium Boolean?
  type ResourceType
  name String
  id String
}
